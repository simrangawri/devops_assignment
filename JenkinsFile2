pipeline {
    agent any
    tools{
        maven "3.6.0"
    }
    stages{
        stage('Build Maven'){
            steps{
                bat 'mvn clean install'
            }
        }
        stage('Build docker image'){
            steps{
                script{
                   bat 'docker build -t simrangawri325/dockerimg .'

                }
            }
        }
        stage('Push image to Hub'){
            steps{
                script{
                                 bat 'docker login -u simrangawri325 -p "simran1234"'
                                  bat 'docker push simrangawri325/dockerimg'

                }

                                }
            }
            stage('deploy to docker'){
                    steps{
                        script{
                           bat "docker stop my_new_container && docker rm my_new_container || true"
                            bat "docker pull simrangawri325/dockerimg"
                            bat "docker run -d --name my_new_container -p 8000:8000 simrangawri325/dockerimg"
                        }
                    }
                }
        }
    }
    
