pipeline {
    agent any
    tools{
        maven "3.6.0"
    }
    stages{
        stage('Build Maven'){
            steps{
                bat 'mvn clean install'
            }
        }
        stage('Build docker image'){
            steps{
                script{
                   bat 'docker build -t devops_assignment:latest C:/Users/simrangawri/Desktop/devops_assignment/.'

                }
            }
        }
        stage('Push image to Hub'){
            steps{
                script{
                  withCredentials([usernamePassword(credentialsId: 'dockerhub', usernameVariable: 'simrangawri325', passwordVariable: 'Mithu1456!')]) {
                   bat 'docker login -u simrangawri325 -p ${Mithu1456!}'

}
                   bat 'docker push simran123/devops_assignment'
                }
            }
        }
    }
}