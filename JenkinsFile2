pipeline {
    agent any
    tools{
        maven "3.6.0"
    }
    stages{
        stage('Build Maven'){
            steps{
                bat 'mvn clean install'
            }
        }
        stage('Build docker image'){
            steps{
                script{
                   bat 'docker build -t simrangawri325/dockerimg .'

                }
            }
        }
        stage('Push image to Hub'){
            steps{
                script{
                                 bat 'docker login -u simrangawri325 -p "simran1234"'
                                  bat 'docker push simrangawri325/dockerimg'

                }

                                }
            }
        }
    }
    
