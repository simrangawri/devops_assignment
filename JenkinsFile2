pipeline {
    agent any
    tools{
        maven "3.6.0"
    }
    stages{
        stage('Build Maven'){
            steps{
                bat 'mvn clean install'
            }
        }
        stage('Build docker image'){
            steps{
                script{
                    bat 'docker build -t C:\Users\simrangawri\Desktop\devops_assignment\DockerFile .'
                }
            }
        }
        stage('Push image to Hub'){
            steps{
                script{
                   withCredentials([string(credentialsId: 'simran123', variable: 'simran123456')]) {
                   bat 'docker login -u simran123 -p ${simran123456}'

}
                   bat 'docker push simran123/devops_assignment'
                }
            }
        }
    }
}